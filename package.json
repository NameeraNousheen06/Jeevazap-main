{
  "name": "mini-habit-tracker",
  "version": "1.0.0",
  "description": "A minimal habit tracking MVP",
  "private": true,
  "workspaces": [
    "apps/web",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run web:dev\"",
    "server:dev": "cd server && npm run dev",
    "web:dev": "cd apps/web && npm run dev",
    "build": "npm run build:web && npm run copy:dist",
    "build:web": "cd apps/web && npm ci && npm run build",
    "copy:dist": "xcopy /E /I /Y apps\\web\\dist dist",
    "start": "cd server && npm start",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.20"
  }
}